					%label#key-label{:for => 'key'} Key
					%input#key{:type => 'text', :value => ''}
				.row
					%label#plaintext-label{:for => 'plaintext'} Plaintext
					%input#plaintext{:type => 'text', :value => ''}
				.row
					%span#error
					#encipher
						%span.darr &darr;
						%span.darr.hidden &darr;
						%span.darr &darr;
						%span.darr.hidden &darr;
						%span.darr &darr;
						%span.darr.hidden &darr;
						%span.darr &darr;
				.row
					%span#ciphertext-label Ciphertext
					%span#ciphertext

		%ol#display

