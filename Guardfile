guard 'coffeescript', :output => 'public' do
  watch(/^src\/(.*)\.coffee/)
end

guard 'coffeescript', :output => 'spec' do
  watch(/^spec\/(.*)\.coffee/)
end

guard 'haml', :input => 'src', :output => 'public' do
  watch /.*\.haml/
end

guard 'sass', :output => 'public' do
  watch(/^src\/(.*)\.sass/)
end
